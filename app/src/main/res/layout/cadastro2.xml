<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.activity.Cadastro2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_fundo2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="200dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="OpenCadastro"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title.cadastro"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins_bold"
                android:text="cadastre sua empresa"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30sp"/>

            <TextView
                android:id="@+id/text.cadastro1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="2dp"
                android:fontFamily="@font/poppins"
                android:text="Lorem Ipsum dolor sit amet"
                android:textColor="@color/white"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:layout_gravity="center">

            <EditText
                android:id="@+id/empresa"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:hint="Nome da empresa?"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/segmento"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:inputType="text"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:hint="Qual o segmento?"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/telefoneemp"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Telefone Empresarial"
                android:inputType="phone"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/rendaatual"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Renda Atual (Começando do mês recorrente até hoje)"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/despesaatual"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Despesa Atual (Começando do mês recorrente até hoje)"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/vendas"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Vendas (Começando do mês recorrente até hoje)"
                android:inputType="number"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="300dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/azulbt"
                android:fontFamily="@font/poppins_semibold"
                android:text="continuar"
                android:onClick="OpenCadastro3"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="23sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text.login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Já tem uma conta?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btcadastro.login"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_light"
                android:onClick="OpenLogin"
                android:paddingLeft="5dp"
                android:text="Faça o login"
                android:textAllCaps="false"
                android:textColor="#B9CCFE"
                android:textSize="14sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>