<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.activity.Cadastro3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_fundo2">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="200dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="OpenCadastro2"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title.cadastro"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins_bold"
                android:text="cadastre sua empresa"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30sp"/>
        </LinearLayout>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="430dp"
    android:layout_marginTop="30dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual foi sua renda em média no último mês?"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/cinza_font2"></TextView>

        <RadioGroup
            android:id="@+id/renda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rendaMenos1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Menos de R$1000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/rendaMais1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$1000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/rendaMais5000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$5000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/rendaMais10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$10000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quanto foi gasto em média com despesas no último mês?"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/cinza_font2"></TextView>

        <RadioGroup
            android:id="@+id/gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/gastoMenos1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Menos de R$1000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/gastoMais1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$1000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/gastoMais10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$10000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/gastoMais50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$50000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qual é sua estimativa atual para sua empresa?"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:textColor="@color/cinza_font2"></TextView>

        <RadioGroup
            android:id="@+id/balanco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/balancoMenos10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Menos de R$10000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/balancoMais10000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$10000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/balancoMais50000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$50000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>

            <RadioButton
                android:id="@+id/balancoMais1000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/cinza_btn"
                android:text="Mais de R$1000000"
                android:fontFamily="@font/poppins"
                android:textSize="10sp"
                android:textColor="@color/cinza_font2"></RadioButton>
        </RadioGroup>
    </LinearLayout>
</ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="35dp">

            <Button
                android:id="@+id/btncadastro"
                android:layout_width="300dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/azulbt"
                android:fontFamily="@font/poppins_semibold"
                android:text="continuar"
                android:onClick="OpenCadastro4"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:background="@drawable/roundedbutton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/text.login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Já tem uma conta?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btcadastro.login"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_light"
                android:onClick="OpenLogin"
                android:text="Faça o login"
                android:textColor="#B9CCFE"
                android:textSize="14sp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>