<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.activity.Cadastro3">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/black_fundo2"
        android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="200dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="OpenCadastro2"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/title.cadastro"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins_bold"
                android:text="cadastre seu perfil"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagem_perfil"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:background="@color/transparent"
                android:onClick="OpenImage"
                app:srcCompat="@drawable/radius" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginStart="-170dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/person_perfil" />

            <ImageButton
                android:id="@+id/editimg_perfil"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="-35dp"
                android:onClick="EditImage"
                android:layout_marginBottom="12dp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/radius2" />

            <ImageButton
                android:id="@+id/edit_perfil"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="bottom"
                android:onClick="EditImage"
                android:layout_marginStart="-37dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                app:srcCompat="@drawable/edit_perfil" />


        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="225dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Nome"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="false"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>

            <EditText
                android:id="@+id/Login"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp"/>

                <EditText
                    android:id="@+id/username"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Nome do Usuário"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="false"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp" />

            <EditText
                android:id="@+id/password"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Password"
                android:inputType="text|textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp"/>

            <EditText
                android:id="@+id/repassword"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/border"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Confirm Password"
                android:inputType="text|textPassword"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#CCCCCC"
                android:textSize="12sp"/>

                <EditText
                    android:id="@+id/telefone"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Telefone"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/cep"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="CEP"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/cnpj"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="CNPJ"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/plano"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Qual o plano?"
                    android:inputType="numberDecimal"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/role"
                    android:layout_width="350dp"
                    android:layout_height="45dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/border"
                    android:ems="10"
                    android:fontFamily="@font/poppins"
                    android:hint="Qual a sua função?"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textColorHint="#CCCCCC"
                    android:textSize="12sp"/>
        </LinearLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="35dp">

            <Button
                android:id="@+id/btncadastro"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/azulbt"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:onClick="OpenHome"
                android:paddingTop="10dp"
                android:text="finalizar"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:background="@drawable/roundedbutton" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/text.login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_light"
                android:text="Já tem uma conta?"
                android:textColor="#FFFFFF"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btcadastro.login"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_light"
                android:onClick="OpenLogin"
                android:text="Faça o login"
                android:textAllCaps="false"
                android:textColor="#B9CCFE"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extralight"
                android:text="Ao se cadastrar você concorda com os termos de política de privacidade da nossa empresa"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="13sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>