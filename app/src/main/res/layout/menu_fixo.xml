<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_fundo"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cinza_menu"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:drawableTop="@drawable/compras_menu"
                android:gravity="bottom|center"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Compras"
                android:textColor="@color/white"
                android:onClick="OpenCompras"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:drawableTop="@drawable/produtos_menu"
                android:gravity="bottom|center"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:text="Produtos"
                android:textColor="@color/white"
                android:onClick="OpenProdutos"
                android:textAlignment="center"
                android:textSize="12sp" />


            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:onClick="OpenHome"
                android:background="#00FFFFFF"
                app:srcCompat="@drawable/home_menu" />


            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:drawableTop="@drawable/stats_menu"
                android:gravity="bottom|center"
                android:paddingBottom="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/white"
                android:text="Estatísticas"
                android:onClick="OpenStats"
                android:textAlignment="center"
                android:textSize="12sp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#00FFFFFF"
                android:drawableTop="@drawable/baseline_person_24"
                android:gravity="bottom|center"
                android:padding="5dp"
                android:text="Usuário"
                android:textColor="@color/white"
                android:onClick="OpenUser"
                android:textAlignment="center"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>