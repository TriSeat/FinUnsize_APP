<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.Notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_fundo"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/func"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="funcionários"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="31sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/poppins"
                        android:text="Listagem de funcionários:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="OpenSearch"
                        android:layout_marginEnd="10dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/baseline_search_24" />

                    <ImageButton
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="OpenFilter"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/baseline_filter_alt_24" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white_fundo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="adicionar mais"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/cinza"
                        android:textSize="27sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:onClick="CadastroProd"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/green_btn"
                        android:src="@drawable/add"></ImageButton>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="310dp"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/retangulo">


                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/produto1_img"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            app:srcCompat="@drawable/produto_img" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/validade_text"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:text="Vence em 30/08/2023"
                            android:fontFamily="@font/poppins"
                            android:textSize="12sp"
                            android:textColor="@color/red_font"></TextView>

                        <TextView
                            android:id="@+id/nome_produto"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:text="Feijão Camil"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="20sp"
                            android:textColor="@color/white"></TextView>

                        <TextView
                            android:id="@+id/fabricação_text"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:text="Criado em 22/07/2023"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="8sp"
                            android:textColor="@color/cinza_font"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginEnd="5dp">

                        <ImageButton
                            android:id="@+id/description_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="25dp"
                            android:background="@color/transparent"
                            android:src="@drawable/pontos_descricao" />
                    </LinearLayout>

                </LinearLayout>

            <include layout="@layout/menu_fixo" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

