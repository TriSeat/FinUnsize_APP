<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.activity.Notification">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_fundo"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="25dp"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/func"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="funcionários"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="31sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="2dp"
                        android:fontFamily="@font/poppins"
                        android:text="Listagem de funcionários:"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center|end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="OpenSearch"
                        android:layout_marginEnd="10dp"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/baseline_search_24" />

                    <ImageButton
                        android:id="@+id/filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="OpenFilter"
                        android:background="#00FFFFFF"
                        app:srcCompat="@drawable/baseline_filter_alt_24" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/white_fundo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="adicionar mais"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/cinza"
                        android:textSize="27sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:onClick="CadastroProd"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/green_btn"
                        android:src="@drawable/add"></ImageButton>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="380dp"
                    android:layout_height="85dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/retangulo">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/func"
                            android:layout_width="50dp"
                            android:layout_marginStart="10dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/func_example" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/nome_func"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_marginStart="10dp"
                            android:text="Salin Ferreira"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="18sp"
                            android:textColor="@color/white"></TextView>

                          </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="5dp">

                        <ImageButton
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_dark_mode_24" />

                        <ImageButton
                            android:id="@+id/cargo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_person_pin_24" />

                        <ImageButton
                            android:id="@+id/salario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_attach_money_24" />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="5dp">

                            <TextView
                                android:id="@+id/turno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="23dp"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:text="AM"/>

                            <TextView
                                android:id="@+id/turno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="23dp"
                                android:textAllCaps="true"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="CAIXA"/>

                            <TextView
                                android:id="@+id/turno"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="5dp"
                                android:textAlignment="center"
                                android:textAllCaps="true"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:text="r$ 3000"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="380dp"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/retangulo">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/func"
                        android:layout_width="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/func_example2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/nome_func"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginStart="10dp"
                        android:text="Sarah Torres"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:textColor="@color/white"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="5dp">

                        <ImageButton
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_dark_mode_24" />

                        <ImageButton
                            android:id="@+id/cargo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_person_pin_24" />

                        <ImageButton
                            android:id="@+id/salario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_attach_money_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="25dp"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="23dp"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="AM"/>

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:textAllCaps="true"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:text="CAIXA"/>

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="7dp"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:text="r$ 4000"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="380dp"
                android:layout_height="85dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/retangulo">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/func"
                        android:layout_width="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_height="50dp"
                        app:srcCompat="@drawable/func_example3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/nome_func"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:layout_marginStart="10dp"
                        android:text="Marcos Augusto"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:textColor="@color/white"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">

                        <ImageButton
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_dark_mode_24" />

                        <ImageButton
                            android:id="@+id/cargo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_person_pin_24" />

                        <ImageButton
                            android:id="@+id/salario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="10dp"
                            android:background="@color/transparent"
                            android:src="@drawable/baseline_attach_money_24" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp">

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="24dp"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:text="PM"/>

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="22dp"
                            android:textAllCaps="true"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:text="CAIXA"/>

                        <TextView
                            android:id="@+id/turno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textSize="13sp"
                            android:textColor="@color/white"
                            android:text="r$ 3000"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/menu_fixo" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

